    "@angular/fire": "^16.0.0",
    "@angular/forms": "^17.3.2",
    "@angular/platform-browser": "^17.3.2",
    "@angular/platform-browser-dynamic": "^17.3.2",
    "@angular/platform-server": "^17.3.2",
    "@angular/router": "^17.3.2",
    "@angular/ssr": "^17.3.2",
    "@popperjs/core": "^2.11.8",
    "angular-svg-icon": "^13.0.0",
    "bootstrap": "^5.2.2",
    "express": "^4.15.2",
    "firebase": "^9.9.0",
    "http-server": "^14.1.1",
    "jquery": "^3.6.0",
    "rxjs": "~7.5.0",
